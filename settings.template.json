{
  "permissions": {
    "allow": [
      "Datadog",
      "Bash(git status*)",
      "Bash(git log *)",
      "Bash(git log)",
      "Bash(git diff*)",
      "Bash(git branch*)",
      "Bash(git show *)",
      "Bash(git rev-parse *)",
      "Bash(git remote -v)",
      "Bash(git stash*)",
      "Bash(git add *)",
      "Bash(git add .)",
      "Bash(git commit *)",
      "Bash(git checkout *)",
      "Bash(git switch *)",
      "Bash(npm test*)",
      "Bash(npm run *)",
      "Bash(npm ls *)",
      "Bash(npm ls)",
      "Bash(npm outdated*)",
      "Bash(npx vitest*)",
      "Bash(npx tsc*)",
      "Bash(node *)",
      "Bash(gh *)",
      "Bash(vals eval *)",
      "Bash(vals exec *)",
      "Bash(ls *)",
      "Bash(ls)",
      "Bash(pwd)",
      "Bash(which *)",
      "Bash(du -sh *)",
      "Bash(wc *)",
      "Bash(date*)",
      "Bash(open *)",
      "Bash(npm install*)",
      "Bash(npm ci*)",
      "Bash(git pull*)",
      "Bash(git push*)",
      "Bash(rm *)",
      "Bash(mkdir *)",
      "Bash(gog *)",
      "Bash(~/.cargo/bin/weaver *)",
      "mcp__coderabbitai__get_coderabbit_reviews",
      "mcp__coderabbitai__get_review_comments",
      "mcp__coderabbitai__resolve_comment",
      "mcp__coderabbitai__resolve_conversation",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(*.pem)",
      "Read(**/*.pem)",
      "Read(*.key)",
      "Read(**/*.key)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Read(~/.docker/**)",
      "Read(credentials*)",
      "Read(**/credentials*)",
      "Read(secrets/**)",
      "Read(**/secrets/**)",
      "Read(.npmrc)",
      "Read(**/.npmrc)",
      "Read(id_rsa*)",
      "Read(id_ed25519*)",
      "Bash(sudo *)",
      "Bash(sudo)",
      "Bash(rm -rf /)",
      "Bash(rm -rf ~*)",
      "Bash(rm -rf /System*)",
      "Bash(rm -rf /usr*)",
      "Bash(rm -rf /bin*)",
      "Bash(rm -rf /sbin*)",
      "Bash(rm -rf /etc*)",
      "Bash(rm -rf /Library*)",
      "Bash(rm -rf /opt*)",
      "Bash(chmod 777 *)",
      "Bash(> /dev/*)",
      "Bash(curl * | bash*)",
      "Bash(curl * | sh*)",
      "Bash(wget * | bash*)",
      "Bash(wget * | sh*)"
    ],
    "ask": [
      "mcp__google-calendar__delete-event",
      "Bash(git merge*)",
      "Bash(git rebase*)",
      "Bash(git branch -D*)",
      "Bash(gh pr merge*)",
      "Bash(npm publish*)"
    ]
  },
  "model": "opus",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "mcp__.*(calendar|youtube|drive|sheet|spreadsheet).*",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_CONFIG_DIR/scripts/google-mcp-safety-hook.py"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_CONFIG_DIR/scripts/gogcli-safety-hook.py"
          },
          {
            "type": "command",
            "command": "$CLAUDE_CONFIG_DIR/.claude/skills/verify/scripts/check-commit-message.sh"
          },
          {
            "type": "command",
            "command": "$CLAUDE_CONFIG_DIR/.claude/skills/verify/scripts/check-branch-protection.sh"
          },
          {
            "type": "command",
            "command": "$CLAUDE_CONFIG_DIR/.claude/skills/verify/scripts/check-coderabbit-required.sh"
          },
          {
            "type": "command",
            "command": "$CLAUDE_CONFIG_DIR/.claude/skills/verify/scripts/pre-commit-hook.sh"
          },
          {
            "type": "command",
            "command": "$CLAUDE_CONFIG_DIR/.claude/skills/verify/scripts/pre-push-hook.sh"
          },
          {
            "type": "command",
            "command": "$CLAUDE_CONFIG_DIR/.claude/skills/verify/scripts/pre-pr-hook.sh"
          },
          {
            "type": "command",
            "command": "$CLAUDE_CONFIG_DIR/.claude/skills/verify/scripts/check-test-tiers.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_CONFIG_DIR/.claude/skills/verify/scripts/post-write-codeblock-check.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); current_dir=$(echo \"$input\" | jq -r '.workspace.current_dir'); model_name=$(echo \"$input\" | jq -r '.model.display_name'); short_dir=$(basename \"$current_dir\"); if git -C \"$current_dir\" rev-parse --git-dir > /dev/null 2>&1; then branch=$(git -C \"$current_dir\" branch --show-current 2>/dev/null || echo 'detached'); git_info=\" on $branch\"; else git_info=\"\"; fi; printf \"%s%s > %s\" \"$short_dir\" \"$git_info\" \"$model_name\""
  },
  "alwaysThinkingEnabled": true,
  "skipDangerousModePermissionPrompt": true
}
